doctype 5
html
	head
		title= (page.title? page.title + ' - ': '') + site.title
		link(rel='stylesheet', href='/bootstrap/styles/bootstrap.css')
		link(rel='stylesheet', href='/bootstrap/styles/bootstrap.css')
		link(rel='stylesheet', href='/bootstrap/styles/responsive.css')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,800')
		link(rel='stylesheet', href='/styles/structure.css')
		link(rel='stylesheet', href='/styles/style.css')
	body
		//if lt IE 9
			p.chromeframe.
				You are using a defective browser.
				Please <a href="http://browsehappy.com/">use any other browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">add Google Chrome Frame</a>.

		nav#site-nav
			.container-fluid
				.row-fluid(role='navigation')
					a(href='/', class='span4 #{page.path == "/"? "active": ""}'): h1 <em>abstract</em><strong>GOO</strong>
					a(href='/page/what-i-do', class='span2 #{page.path == "what-i-do"? "active": ""}') what I do
					a(href='/page/how-i-roll', class='span2 #{page.path == "how-i-roll"? "active": ""}') how I roll
					a(href='/page/whats-up', class='span2 #{page.path == "whats-up"? "active": ""}') what's up
					a(href='/page/who-i-am', class='span2 #{page.path == "who-i-am"? "active": ""}') who I am

		block content
		script(src='http://code.jquery.com/jquery-1.9.1.min.js')
		script window.jQuery || document.write('<script src="/scripts/jquery.min.js"><\\/script>')
		script(src='/bootstrap/scripts/bootstrap-carousel.js')
		block scripts
		script
			$('.inactive').each(function() {
				$(this).attr('title', 'does not exist');
			});
		script
			$('.imagebar').parent().hover(function() {
				$(this).children('.imagebar').stop().fadeIn('fast');
			}, function() {
				$(this).children('.imagebar').stop().fadeOut('fast');
			});
